extends ../layout
block content
    link(rel='stylesheet', href='/stylesheets/examples/todolist/todo.css')
    div(ng-app='toDoApp')
        h1= title
        p Welcome to #{title}
        div(ng-controller='ToDoController')
            p
                label(for='item') New Item:
                input(name='item',id='item', ng-model='toDoItem', placeholder='Input a item')
                button(ng-click='addItem()') Add
            // Use ng-bind to prevent flickering effect before dom ready
            div#preview(ng-bind='toDoItem')
            div#error(ng-bind='errorMsg')
            div
                p List of item to do:
                ul(ng-model='toDoList')
                    li.todoItem(ng-repeat="item in toDoList")
                        span(ng-bind='item.text')
                        span(ng-bind="item.date | date:'yyyy-MM-dd'")

    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js", type="text/javascript")
    script(src='/javascripts/angular.min.js', type='text/javascript')
    script(src='/javascripts/examples/todolist/todo.js', type='text/javascript')
